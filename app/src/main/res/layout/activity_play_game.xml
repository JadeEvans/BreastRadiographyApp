<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jadepc.breastradiographyapp.PlayGame"
    android:background="@color/title_bg">

    <TextView
    android:text="@string/play_game_select"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView" />


    <Button
        android:id="@+id/player_button_one"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_img"
        android:layout_below="@+id/textView"
        android:padding="40dp"
        android:onClick="patient_Click"
         />

    <Button
        android:id="@+id/player_button_two"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_img3"
        android:layout_below="@+id/textView"
        android:padding="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="250dp"
        android:onClick="patient_Click"
        />

    <Button
        android:id="@+id/player_button_three"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_img2"
        android:layout_below="@+id/textView"
        android:padding="40dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="100dp"
        android:onClick="patient_Click"
        />

