<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jadepc.breastradiographyapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".howToPlay"
            android:label="@string/title_activity_how_to_play"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.MainActivity" />
        </activity>
        <activity
            android:name=".Achievement"
            android:label="@string/title_activity_achievement"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.MainActivity" />
        </activity>
        <activity
            android:name=".Leaderboard"
            android:label="@string/title_activity_leaderboard"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.MainActivity" />
        </activity>
        <activity
            android:name=".PlayGame"
            android:label="@string/title_activity_play_game"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.MainActivity" />
        </activity>
        <activity
            android:name=".ActualGameScreen"
            android:label="@string/title_activity_actual__game__screen"
            android:parentActivityName=".PlayGame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.PlayGame" />
        </activity>
        <activity
            android:name=".Answer"
            android:label="@string/title_activity_answer"
            android:parentActivityName=".PlayGame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.PlayGame" />
        </activity>
        <activity
            android:name=".Incorrect"
            android:label="@string/title_activity_incorrect"
            android:parentActivityName=".PlayGame" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.PlayGame" />
        </activity>
        <activity
            android:name=".HintScreen"
            android:label="@string/title_activity_hint_screen"
            android:parentActivityName=".ActualGameScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jadepc.breastradiographyapp.ActualGameScreen" />
        </activity>
    </application>

</manifest>
